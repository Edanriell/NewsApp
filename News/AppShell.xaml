<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="News.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="News">
    <FlyoutItem Title="Home" Icon="{StaticResource HomeIcon}">
        <ShellContent Title="Headlines" Icon="{StaticResource
HeadlinesIcon}">
            <ContentPage Title="Headlines" />
        </ShellContent>
        <Tab Title="News" Icon="{StaticResource NewsIcon}">
            <ContentPage Title="Local" />
            <ContentPage Title="Global" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Settings" Icon="{StaticResource
SettingsIcon}">
        <ContentPage Title="Settings" />
    </FlyoutItem>
    <ShellContent Title="About" Icon="{StaticResource
AboutIcon}">
        <ContentPage Title="About" />
    </ShellContent>
</Shell>